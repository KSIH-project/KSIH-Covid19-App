<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.android.ksih_covid_19_app.ui.home.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_homeFragment_to_bottomSheet"
            app:destination="@id/bottomSheet" />
        <action
            android:id="@+id/action_homeFragment_to_barChartFragment"
            app:destination="@id/barChartFragment" />
    </fragment>
    <dialog
        android:id="@+id/bottomSheet"
        android:name="com.android.ksih_covid_19_app.ui.symptoms.PreventionDialogFragment"
        tools:layout="@layout/prevention_bottom_sheet">
        <action
            android:id="@+id/action_bottomSheet_to_symptomsFragment"
            app:destination="@id/symptomsFragment" />
    </dialog>
    <fragment
        android:id="@+id/countryFragment"
        android:name="com.android.ksih_covid_19_app.ui.country.CountryFragment"
        android:label="country_fragment"
        tools:layout="@layout/country_fragment" />
    <fragment
        android:id="@+id/liveByCountryAndStatusFragment"
        android:name="com.android.ksih_covid_19_app.ui.liveByCountryAndStatus.LiveByCountryAndStatusFragment"
        android:label="live_by_country_and_status_fragment"
        tools:layout="@layout/live_by_country_and_status_fragment" />

    <fragment
        android:id="@+id/dayOneTotalFragment"
        android:name="com.android.ksih_covid_19_app.ui.dayOneTotal.DayOneTotalFragment"
        android:label="Day one Total"
        tools:layout="@layout/fragment_day_one_total" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.android.ksih_covid_19_app.ui.search.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/search_fragment" />
    <fragment
        android:id="@+id/summaryFragment"
        android:name="com.android.ksih_covid_19_app.ui.summary.SummaryFragment"
        android:label="summary_fragment"
        tools:layout="@layout/summary_fragment" />
    <fragment
        android:id="@+id/dayOneTotalDetailsFragment"
        android:name="com.android.ksih_covid_19_app.ui.dayOneTotal.DayOneTotalDetailsFragment"
        android:label="fragment_day_one_total_details"
        tools:layout="@layout/fragment_day_one_total_details" />
    <fragment
        android:id="@+id/symptomsFragment"
        android:name="com.android.ksih_covid_19_app.ui.symptoms.SymptomsFragment"
        android:label="fragment_symptoms"
        tools:layout="@layout/fragment_symptoms">
        <action
            android:id="@+id/action_symptomsFragment_to_symptomsDialogFragment"
            app:destination="@id/symptomsDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/symptomsDialogFragment"
        android:name="com.android.ksih_covid_19_app.ui.symptoms.PreventionDialogFragment"
        android:label="fragment_symptoms_dialog"
        tools:layout="@layout/symptoms_alert_dialog" />
    <fragment
        android:id="@+id/barChartFragment"
        android:name="com.android.ksih_covid_19_app.ui.home.BarChartFragment"
        android:label="BarChartFragment" />
</navigation>